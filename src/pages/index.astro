---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import Gallery from '../components/Gallery.astro';
import { shopLink } from '../constants/happy-live';

const productos: CollectionEntry<'productos'>[] = await getCollection('productos');
---

<Layout title="Happy Docs">
  <Gallery productos={productos} carrito={shopLink.href} />
</Layout>
