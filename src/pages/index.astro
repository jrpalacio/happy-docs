---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import { shopLink } from '../constants/happy-live';
import FilterProducts from '../components/FilterProducts.vue';

const productos: CollectionEntry<'productos'>[] = await getCollection('productos');

---

<Layout title="Happy Docs">
  <FilterProducts client:load items={productos} shopLink={shopLink.href}/>
</Layout>
