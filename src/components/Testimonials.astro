---
const { testimonio } = Astro.props;
---
<div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-md border border-gray-200 dark:border-gray-700 min-w-[300px] max-w-sm flex flex-col h-full">
    <figure class="flex flex-col flex-grow">
        <svg class="h-10 w-10 mx-auto mb-3 text-gray-400 dark:text-gray-500" viewBox="0 0 24 27" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M14.017 18L14.017 10.609C14.017 4.905 17.748 1.039 23 0L23.995 2.151C21.563 3.068 20 5.789 20 8H24V18H14.017ZM0 18V10.609C0 4.905 3.748 1.038 9 0L9.996 2.151C7.563 3.068 6 5.789 6 8H9.983L9.983 18L0 18Z" fill="currentColor"/>
        </svg> 
        <blockquote class="mb-4 flex-grow">
            <p class="text-lg md:text-xl font-medium text-gray-900 dark:text-white text-center">{testimonio.descripcion}</p>
        </blockquote>
        <figcaption class="flex items-center justify-center mt-auto pt-4 border-t border-gray-200 dark:border-gray-700">
            <img class="size-10 object-cover rounded-full " src={testimonio.img} alt="profile picture">
            <div class="flex items-center divide-x-2 divide-gray-500 dark:divide-gray-700 ml-3">
                <div class="pr-3 font-medium text-gray-900 dark:text-white text-sm">{testimonio.usuario}</div>
                <div class="pl-3 text-xs font-light text-gray-500 dark:text-gray-400">{testimonio.producto}</div>
            </div>
        </figcaption>
    </figure>
</div>